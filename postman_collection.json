        },
        {
          "name": "Search Books by Title",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/search?q=Gatsby&field=title",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "Gatsby"
                },
                {
                  "key": "field",
                  "value": "title"
                }
              ]
            }
          }
        },
        {
          "name": "Search Books by Author",
